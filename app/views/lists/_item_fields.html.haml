= cocooned_item do
  .m-2.p-2.ml-8.border-1.border.border-blue-800.flex.flex-row.items-center
    .flex.flex-col
      = cocooned_remove_item_link f do
        .text-red-600.text-sm= "Remove #{f.object.class.name.downcase}"
      
      = f.text_field :position
      = cocooned_move_item_up_link 'Up', f
      = cocooned_move_item_down_link 'Down', f

    = f.label :name
    = f.text_field :name

    = cocooned_container(data: { controller: 'cocooned'}, reorderable: true) do
      = f.fields_for :subitems do |subitem|
        = render 'subitem_fields', f: subitem
      .add-subitem-link.text-blue-500.text-sm
        = cocooned_add_item_link 'Add subitem', f, :subitems, partial: 'subitem_fields'