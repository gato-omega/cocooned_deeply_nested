= cocooned_item do
  .m-2.p-2.ml-8.border-1.border.border-blue-500.flex.flex-row.items-center
    .flex.flex-col
      = cocooned_remove_item_link f do
        .text-red-500.text-sm= "Remove #{f.object.class.name.downcase}"
      
      = f.text_field :position
      = cocooned_move_item_up_link 'Up', f
      = cocooned_move_item_down_link 'Down', f
      
    = f.label :name
    = f.text_field :name

    = cocooned_container(data: { controller: 'cocooned'}, reorderable: true) do
      = f.fields_for :microitems do |microitem|
        = render 'microitem_fields', f: microitem
      .add-microitem-link.text-blue-300.text-sm
        = cocooned_add_item_link 'Add microitem', f, :microitems, partial: 'microitem_fields'