= cocooned_item do
  .m-2.p-2.ml-8.border-1.border.border-blue-300.flex.flex-row.items-center
    .flex.flex-col
      = cocooned_remove_item_link f do
        .text-red-300.text-sm= "Remove #{f.object.class.name.downcase}"
      
      = f.text_field :position
      = cocooned_move_item_up_link 'Up', f
      = cocooned_move_item_down_link 'Down', f

    = f.label :name
    = f.text_field :name
    